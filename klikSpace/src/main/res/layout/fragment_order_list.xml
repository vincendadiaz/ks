<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kickstartlab.android.klikSpace.fragments.MerchantListFragment">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/filterSpinner"
            android:entries="@array/date_filter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="2dp">
        </Spinner>

        <SearchView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"
            android:layout_gravity="right|top"
            android:gravity="right"
            android:iconifiedByDefault="true" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:measureWithLargestChild="false"
        android:paddingLeft="8dp">
        <TextView
            android:id="@+id/fromDateLabel"
            android:layout_width="wrap_content"
            android:text="From"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/fromDate"
            android:layout_width="wrap_content"
            android:text="2014-12-13"
            android:layout_height="fill_parent"
            android:layout_gravity="top"
            android:gravity="center_vertical" />
        <TextView
            android:id="@+id/toDateLabel"
            android:layout_width="wrap_content"
            android:text="To"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/toDate"
            android:layout_width="wrap_content"
            android:text="2014-12-15"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingLeft="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:orientation="horizontal">
        <TextView
            android:text="@string/total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/total_package"
            android:text="@string/total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:padding="6dp" />
        <TextView
            android:text="@string/scanned_label"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/scanned_count"
            android:padding="6dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:text="@string/total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />
</LinearLayout>
